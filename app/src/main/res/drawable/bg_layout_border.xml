<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:left="-2dp"
        android:right="-2dp"
        android:top="-2dp"
        android:bottom="1dp"
        >

        <shape android:shape="rectangle">


            <!--设置边框-->
            <stroke
                android:width="1dp"
                android:color="@color/info" />

            <!--指定背景-->
            <solid android:color="@color/white" />

        </shape>

    </item>

</layer-list>